{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>nuxt/renovate-config-nuxt"
  ],
  "dependencyDashboard": true,
  "rebaseWhen": "conflicted",
  "ignoreDeps": [
    "bootstrap"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "labels": [
        "dependencies",
        "linting"
      ],
      "matchPackageNames": [
        "/eslint/"
      ]
    }
  ],
  "prConcurrentLimit": 30,
  "rangeStrategy": "bump"
}
